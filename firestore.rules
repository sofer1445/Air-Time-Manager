rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // MVP rules: any signed-in user (including anonymous) can read/write.
    // Tighten later by scoping to team/event ownership.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
